nextflowVersion = '1.2+' 
process.scratch = true

profiles {
  docker {
    docker {
      enabled = true
    }
  }

  k8s {
    
    process.executor = 'k8s'
    process.scratch = true
    process.cpus = 3
    process.memory = '8 GB'    
    
    k8s {
      debug.yaml = true      
      storageClaimName = 'rawsig-claim'
    }
  }
}
